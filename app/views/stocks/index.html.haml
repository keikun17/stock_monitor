.page-header
  = form_tag new_stock_path, method: :get do
    = select_tag :product_id, options_for_select(Product.all.collect{|x| [x.name, x.id]})
    = submit_tag 'New Stock', :class => 'btn btn-primary' do
      %span.glyphicon.glyphicon-plus
      New Stock
  %h1 Listing stocks

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Product
        %th
        %th
        %th

    %tbody
      - @stocks.each do |stock|
        %tr
          %td= stock.product
          %td= link_to 'Show', stock
          %td= link_to 'Edit', edit_stock_path(stock)
          %td= link_to 'Destroy', stock, :data => { confirm: 'Are you sure?' }, :method => :delete
