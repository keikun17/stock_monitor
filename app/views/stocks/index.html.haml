.page-header
  = link_to new_stock_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Stock
  %h1 Listing stocks

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Stock template
        %th
        %th
        %th

    %tbody
      - @stocks.each do |stock|
        %tr
          %td= stock.stock_template
          %td= link_to 'Show', stock
          %td= link_to 'Edit', edit_stock_path(stock)
          %td= link_to 'Destroy', stock, :data => { confirm: 'Are you sure?' }, :method => :delete
