.page-header
  = link_to stocks_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_stock_path(@stock), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show stock

%dl.dl-horizontal
  %dt Product:
  %dd= @stock.product

  %table.table
    %tr
      %th Field
      %th Value
      %th Unit
      - @stock.stock_fields.each do |stock_field|
        %tr
          %td= stock_field.product_field.name
          %td
            - case stock_field.product_field.field_type
            - when 'float'
              = stock_field.float_value
          %td= stock_field.product_field.unit
