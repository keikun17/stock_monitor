.page-header
  = link_to new_deposit_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Deposit
  %h1 Listing deposits

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Quantity
        %th Unit
        %th Date ordered
        %th Arrival date
        %th Remarks
        %th Stock
        %th
        %th
        %th

    %tbody
      - @deposits.each do |deposit|
        %tr
          %td= deposit.quantity
          %td= deposit.unit
          %td= deposit.date_ordered
          %td= deposit.arrival_date
          %td= deposit.remarks
          %td= deposit.stock
          %td= link_to 'Show', deposit
          %td= link_to 'Edit', edit_deposit_path(deposit)
          %td= link_to 'Destroy', deposit, :data => { confirm: 'Are you sure?' }, :method => :delete
